
@{
    ViewBag.Title = "Personel Ekle";
}

 <div class="container-fluid">
    <div class="col-sm-12">
        <div class="the-box bg-default no-border no-margin heading" style="background-color: whitesmoke;">
            <div class="row">
                <div class="col-sm-6">
                    <h1><i class="fa fa-user icon-lg icon-circle icon-bordered"></i> Personel Kayıt İşlemi</h1>
                </div>
            </div>
        </div>
        <div class="the-box form-horizontal ">
            <h4 class="small-title"></h4>
            @using (Html.BeginForm("AddPersonnel", "Personnel", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="col-lg-3 control-label"></label>
                    <div class="col-lg-4">
                        @Html.ValidationSummary(true, "", new { @class = "error", @style = "margin-top: -2.3% !important;color:#D51919;" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Adı Soyadı</label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="Name" placeholder="Adı" id="Name" required data-bv-notempty-message="The first name is required and cannot be empty" />
                    </div>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="LastName" id="LastName" placeholder="Soyadı" required data-bv-notempty-message="The last name is required and cannot be empty" />
                    </div>
                </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Maas</label>
                            <div class="col-lg-4">
                                <input type="number" class="form-control" name="Total" id="Total" placeholder="Personel Maaşı"
                                       data-bv-message="The username is not valid"
                                       required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">E-Posta Adresi</label>
                            <div class="col-lg-4">
                                <input class="form-control" name="Email" id="Email" placeholder="E-Posta Adresi" type="email" data-bv-emailaddress-message="The input is not a valid email address" />
                            </div>
                        </div>
                      
                       
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Telefon Bilgileri</label>
                            <div class="col-lg-4">
                                <input type="text" class="form-control phone_us_masking" required placeholder="(000) 000-0000" name="Phone" id="Phone" /> (000) 000-0000 / Telefon
                            </div>
                           
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Acıklama</label>
                            <div class="col-lg-4">
                                <input type="text" class="form-control" name="Description" id="Description" placeholder="Acıklama"
                                       data-bv-message="The username is not valid"
                                       required />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-9 col-lg-offset-3">
                                <button type="submit" class="btn btn-default">Kaydet</button>
                            </div>
                        </div>
            }
        </div>
    </div>
</div>

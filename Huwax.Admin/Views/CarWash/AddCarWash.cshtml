@{

    ViewBag.Title = "Araç Kayıt İşlemi";
}

<div class="container-fluid">
    <div class="col-sm-12">
        <div class="the-box bg-default no-border no-margin heading" style="background-color: whitesmoke;">
            <div class="row">
                <div class="col-sm-6">
                    <h1><i class="fa fa-plus icon-lg icon-circle icon-bordered"></i> Araç Kayıt İşlemi</h1>
                </div>
            </div>
        </div>
        <div class="the-box form-horizontal ">
            <h4 class="small-title"></h4>
            @using (Html.BeginForm("AddCarWash", "CarWash", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="col-lg-3 control-label"></label>
                    <div class="col-lg-4">
                        @Html.ValidationSummary(true, "", new { @class = "error", @style = "margin-top: -2.3% !important;color:#D51919;" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Araç Plakası</label>
                    <div class="col-lg-4">
                        <input type="text" style="text-transform: uppercase;" class="form-control" name="VehiclePlate" id="VehiclePlate" placeholder="Araç Plakası" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Ücret</label>
                    <div class="col-lg-4">
                        <input type="number" class="form-control" style="text-transform: uppercase;" name="Total" id="Total" placeholder="Ücret" required />
                    </div>
                </div> 
                <div class="form-group">
                    <label class="col-lg-3 control-label">Açıklama</label>
                    <div class="col-lg-4">
                        <textarea type="text" class="form-control" placeholder="Açıklama" name="Description" id="Description" required></textarea>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-lg-9 col-lg-offset-3">
                        <button type="submit" class="btn btn-default">Kaydet</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


@using Huwax.Common
@model IEnumerable<Infrastructure.Models.VehicleModel>
@{
    ViewBag.Title = "Araç  Listesi";
    var i = 0;
}

<div class="container-fluid">
    <div class="col-sm-12">
        <div class="the-box bg-default no-border no-margin heading" style="background-color: whitesmoke;">
            <div class="row">
                <div class="col-sm-6">
                    <h1>
                        <i class="fa  fa-tasks icon-lg icon-circle icon-bordered"></i> Araç Listesi
                    </h1>
                </div>
            </div>
        </div>
        <!-- BEGIN DATA TABLE -->
        <div class="the-box">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="datatable-example">
                    <thead class="the-box dark full">
                        <tr>
                            <th>Sıra</th>
                            <th>Plaka</th>
                            <th>Araç</th>
                            <th>Model</th>
                            <th>Arac Türü</th>
                            <th>Kullanıcı Türü</th>
                            <th>Açıklama</th>
                            <th>Seçenekler</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vehicle in Model)
                        {
                            i++;
                            <tr>
                                <td>@i</td>

                                <td style="text-transform: uppercase;">@vehicle.VehiclePlate</td>
                                <td style="text-transform: uppercase;">@vehicle.VehicleName</td>
                                <td style="text-transform: uppercase;">@vehicle.Model</td>
                                <td>
                                    @if (vehicle.VehicleType == (int)Enums.VehicleType.Minibus)
                                    {<text>
                                        Minibus
                                    </text>
                                    }
                                    else if (vehicle.VehicleType == (int)Enums.VehicleType.Motosiklet)
                                    {
                                        <text>
                                            Motosiklet
                                        </text>
                                    }
                                    else if (vehicle.VehicleType == (int)Enums.VehicleType.Otomobil)
                                    {
                                        <text>
                                            Otomobil
                                        </text>
                                    }
                                    else if (vehicle.VehicleType == (int)Enums.VehicleType.Ticari)
                                    {
                                        <text>
                                            Ticari
                                        </text>
                                    }

                                </td>
                                <td>
                                    @if (vehicle.Enterprice)
                                    {<text>
                                        Kurumsal
                                    </text>

                                    }
                                    else
                                    {
                                        <text>
                                            Bireysel
                                        </text>
                                    }
                                 </td>
                                <td>@vehicle.Description</td>
                                <td>

                                    <a class="btn btn-danger" data-toggle="modal" title="Delete" href='#DefaultModal' onclick="SetId(@vehicle.VehicleId)">
                                        <i class=" fa fa-trash-o"></i>
                                    </a>

                                </td>

                            </tr>
                        }
                        @{ i = 0;}

                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal fade" id="DefaultModal" tabindex="-1" role="dialog" aria-labelledby="DefaultModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="DefaultModalLabel">Kullanıcı Silme İşlemi</h4>
                    </div>
                    <div class="modal-body">
                        Kullanıcıyı silmek istediğinize emin misiniz ?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Hayır</button>
                        <a id="Deletevehicle">
                            <div class="btn btn-primary">
                                Evet
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        @*<script>
                function SetId(vehicleId) {
                    $("#Deletevehicle").attr('href', '/vehicle/vehicleDelete?vehicleId=' + vehicleId);
                }
            </script>*@
    </div>
</div>
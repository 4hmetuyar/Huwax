@using Huwax.Common
@model IEnumerable<Infrastructure.Models.UserModel>
@{
    ViewBag.Title = "Kullanıcı Listesi";
    var i = 0;
}

 
 
        <div class="btn-toolbar top-table" role="toolbar">
            <div class="btn-group pull-right">

                <div class="btn-group">
                    <a href="@Url.Action("UserAdd","User")" class="btn btn-default"><i class="fa fa-plus"></i> Yeni Kullanıcı Ekle</a>
                </div>
            </div>
        </div>
        <!-- BEGIN DATA TABLE -->
        <div class="the-box">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="datatable-example">
                    <thead class="the-box dark full">
                        <tr>
                            <th>Sıra</th>
                            <th>Ad Soyad</th>
                             <th>E-Posta</th>
                            <th>Telefon</th>
                             <th>Seçenekler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            i++;
                            <tr>
                                <td>@i</td>
                                @if (user.Avatar != null)
                                {
                                    string imageBase64 = Convert.ToBase64String(user.Avatar);
                                    string imageScr = string.Format("data:image/gif;base64,{0}", imageBase64);
                                    <td><img src="@imageScr" class="avatar img-circle" alt="avatar">@user.Name @user.LastName</td>
                                }
                                else
                                {
                                    <td><img src="~/assets/img/avatar/user-icon.png" class="avatar img-circle" alt="avatar">@user.Name @user.LastName</td>

                                }
                                <td>@user.Email</td>
                                <td>@user.Phone</td>
                              
                                    <td>
                                        <a href="@Url.Action("UserStatus", "User", new { userId = user.UserId })"><span class="btn btn-default" title="Aktif"><i class="fa  fa-check-square-o"></i></span></a>

                                        <a class="btn btn-danger" data-toggle="modal" title="Delete" href='#DefaultModal' onclick="SetId(@user.UserId)">
                                            <i class=" fa fa-trash-o"></i>
                                        </a>
                                        <a href="@Url.Action("UserProfile", "User", new { userId = user.UserId })"><span class="btn btn-default" title="Profil"><i class="fa fa-user"></i></span></a>
                                        <a href="@Url.Action("UserProfileEdit","User",new {userId=user.UserId})"><span class="btn btn-default" title="Düzenle"><i class="fa fa-wrench"></i></span></a>
                                    </td>
                               
                            </tr>
                        }
                        @{ i = 0;}

                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal fade" id="DefaultModal" tabindex="-1" role="dialog" aria-labelledby="DefaultModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="DefaultModalLabel">Kullanıcı Silme İşlemi</h4>
                    </div>
                    <div class="modal-body">
                        Kullanıcıyı silmek istediğinize emin misiniz ?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Hayır</button>
                        <a id="DeleteUser">
                            <div class="btn btn-primary">
                                Evet
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
 
<script>
    function SetId(userId) {
        $("#DeleteUser").attr('href', '/User/UserDelete?userId=' + userId);
    }
</script>